@model  PassportTracker.Models.Access

@{
    ViewBag.Title = "Delete";
}
@using (Html.BeginForm())
{

@*<h2></h2>*@
<h3>Are you sure you want to delete this access control ?</h3>
    <table border="0">
    <tr>
        <td class="auto-style16">
            <input type="submit" value="Delete" class="btn btn-primary" />
            @Html.ActionLink("Back", "Index", new { SPHostUrl = SharePointContextFilterAttribute.sphosturl }, new { @class = "btn btn-primary" })
        </td>
    </tr>
</table>

@Html.HiddenFor(model => model.Id)
                
@Html.AntiForgeryToken()
    
    <table border="0">
        <tr>
            <td class="auto-style15">
                <table border="1" cellspacing="0" cellpadding="4" style="font-family: Arial; font-size: 10pt; background-color:whitesmoke; width:100%;">
                    <tr style="background-color:darkblue;color:white"><th align="center"><b>NJC Events Access Control</b></th></tr>
                    <tr>
                        <td class="auto-style14">

                            <table border="0" style="font-family: Arial; font-size: 10pt; width: 100%; background-color: threedlightshadow;" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="left" nowrap class="auto-style5">
                                        Access Group:
                                    </td>

                                    <td align="left">
                                        @Html.DisplayFor(model => model.AccessGroup)
                                    </td>
                                </tr>
                            </table>

                            <table border="0" style="font-family: Arial; font-size: 10pt; width: 100%; background-color: whitesmoke;" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="left" nowrap class="auto-style5">
                                        User:
                                    </td>

                                    <td align="left">
                                        @Html.DisplayFor(model => model.UserName)
                                    </td>
                                </tr>
                            </table>

                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
}
